[Unit]
Description=uWSGI Emperor with Python %(PYTHON_VERSION)s
After=syslog.target

[Service]
ExecStart=%(UWSGI_BINARY)s --ini %(UWSGI_EMPEROR_INI)s
# Requires systemd version 211 or newer
RuntimeDirectory=uwsgi
Restart=always
KillSignal=SIGQUIT
Type=notify
StandardError=syslog
NotifyAccess=all

[Install]
WantedBy=multi-user.target
